@model TSHPandaPortalAD.Models.Type_Model
<tr>
    <th scope="row">@Model.num</th>
    <td>@Model.Name</td>
    <td>@Model.Count</td>
    <td>

        @if (@Model.Deleted)
        {
            <span class="kt-badge kt-badge--inline kt-badge--danger">حذف شده</span>
        }
        else if (@Model.Disabled)
        {
            <span class="kt-badge kt-badge--inline kt-badge--warning">غیر فعال</span>
        }
        else if (!@Model.Disabled)
        {
            <span class="kt-badge kt-badge--inline kt-badge--success">فعال</span>
        }


    </td>
    <td>
        <span class="dropdown">
            @if (!@Model.Deleted)
            {
                <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="true">
                    <i class="la la-ellipsis-h"></i>
                </a>
            }

            <div class="dropdown-menu dropdown-menu-right">
                <span class="dropdown-item">

                    @if (!@Model.Disabled && !@Model.Deleted)
                    {
                    <button class="btn btn-bold btn-outline-warning" style="width: 100%;" data-toggle="modal" data-target="#PandaEditModal" ><i class="fa fa-moon"><span style="font-family: IRANSansWeb; padding-right: 5px;">غیرفعال کردن</span></i></button>
                    }

                </span>
                <span class="dropdown-item">

                    @if (!@Model.Deleted)
                    {
                        <button  class="btn btn-bold btn btn-outline-danger" style="width: 100%;" data-toggle="modal" data-target="#PandaDeletModal"><i class="fa fa-eraser"><span style="font-family: IRANSansWeb; padding-right: 5px;">حذف</span></i></button>
                    }

                </span>
                <span class="dropdown-item">
                    @if (!@Model.Deleted && @Model.Disabled)
                    {
                        <a href="@Url.Action("Enable","Panel",new {id=@Model.Id})" class="btn btn-bold btn btn-outline-success" style="width: 100%;" data-toggle="modal" data-target="#PandaDeletModal"><i class="fa fa-check"><span style="font-family: IRANSansWeb; padding-right: 5px;">فعال سازی</span></i></a>
                    }
                </span>
            </div>
        </span>

    </td>
</tr>


<!--START : EDITMODAL-->
<div class="modal fade" id="PandaEditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered " role="document">
        <div class="modal-content ">
            <div class="modal-header alert alert-warning">
                <h5 class="modal-title">غیر فعال کردن دسته بندی اصلی</h5>
                <button type="button" class="close" style="color: black;" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <span>نام دسته بندی انتخاب شده : </span><span id="PandaEditModalCategoryName"></span>
                <br />
                <span>
                    بخش <span class="kt-badge kt-badge--inline kt-badge--warning">غیرفعال کردن</span> تمامی محصولات زیر شاخه آن دسته بندی را از دید کاربران مخفی میکند
                    .
                </span>
                <br />
                آیا از این کار مطمئن هستید؟
            </div>
            <div class="modal-footer">
                <input style="width: 100%; height: 50px; display: none;" type="text" value="" id="EditID">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">منصرف شدم</button>
                <a href="@Url.Action("Disable","Panel",new {id=@Model.Id})" type="button" class="btn btn-outline-warning" data-dismiss="modal">بله،غیر فعال کن!</a>
            </div>
        </div>
    </div>
</div>
<!--END : EDITMODAL-->
<!--START : DELETEMODAL-->
<div class="modal fade" id="PandaDeletModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered " role="document">
        <div class="modal-content ">
            <div class="modal-header alert alert-danger">
                <h5 class="modal-title" style="color: #fff;" id="exampleModalLongTitle">غیر فعال کردن دسته بندی اصلی</h5>
                <button type="button" class="close" style="color: black;" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <span>نام دسته بندی انتخاب شده : </span><span id="PandaDeleteModalCategoryName"></span>
                <br />
                <span>
                    بخش <span class="kt-badge kt-badge--inline kt-badge--danger">حذف</span> تمامی محصولات زیرشاخه آن دسته بندی را <span class="kt-badge kt-badge--inline kt-badge--danger">حذف</span> خواهد کرد
                    .
                </span>
                <br />
                آیا از این کار مطمئن هستید؟
            </div>
            <div class="modal-footer">
                <input style="width: 100%; height: 50px; display: none;" type="text" value="" id="EditID">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">منصرف شدم</button>
                <a href="@Url.Action("Delete","Panel",new {id=@Model.Id})" type="button" class="btn btn-outline-danger" data-dismiss="modal">بله،حذف کن!</a>
            </div>
        </div>
    </div>
</div>
<!--END : DELETEMODAL-->
